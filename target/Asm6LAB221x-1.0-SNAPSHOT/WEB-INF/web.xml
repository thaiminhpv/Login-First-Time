<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <listener>
        <listener-class>lms.funix.lab.commons.HelperDAO</listener-class>
    </listener>
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>lms.funix.lab.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginFirstTimeServlet</servlet-name>
        <servlet-class>lms.funix.lab.controller.LoginFirstTimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginFirstTimeServlet</servlet-name>
        <url-pattern>/first_time_login</url-pattern>
    </servlet-mapping>

</web-app>